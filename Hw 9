import logging
import time

# Configure logging
logging.basicConfig(
    filename="simulation.log",  # Log file
    level=logging.INFO,  # Set log level
    format="%(asctime)s - %(levelname)s - %(message)s",  # Format logs
)

class SimulationLogger:
    @staticmethod
    def log_event(event: str, level="INFO"):
        """Logs simulation events with different severity levels."""
        if level == "INFO":
            logging.info(event)
        elif level == "WARNING":
            logging.warning(event)
        elif level == "ERROR":
            logging.error(event)

if __name__ == "__main__":
    SimulationLogger.log_event("Simulation started")

    for i in range(3):  # Simulating
        time.sleep(1)  # Simulating time passing
        SimulationLogger.log_event(f"Agent moved to position {i}", level="INFO")

    SimulationLogger.log_event("Simulation encountered a minor issue", level="WARNING")
    
    try:
        # Simulating an error
        raise ValueError("AI pathfinding error")
    except ValueError as e:
        SimulationLogger.log_event(f"Error: {str(e)}", level="ERROR")

    SimulationLogger.log_event("Simulation ended")

